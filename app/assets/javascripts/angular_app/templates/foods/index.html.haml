.container
  %h2 Foods
  .row
    .col-md-10
      %button.btn.btn-success(ng-click="new()")
        %span.glyphicon.glyphicon-plus
        Додати новий продукт
  .row
    .col-md-10
      %tabset(type="pills")
        %tab(ng-repeat="group in groups" heading="{{group.name}}" active="group.active" disabled="group.disabled" select="getFoods(group.id)")
          .left-inner-addon
            %i.glyphicon.glyphicon-search
            %input.form-control.search(type="search" ng-model="search" placeholder="Пошук в роздiлi")
          .row
            .col-md-10
              %table.table.table-bordered.table-hover
                %thead
                  %tr
                    %th #
                    %th
                      %a(href="" ng-click="predicate = 'name'; reverse=!reverse")
                        Назва продукту
                    %th
                      %a(href="" ng-click="predicate = 'price'; reverse=!reverse")
                        Цiна
                    %th
                %tbody
                  %tr(ng-repeat="food in foods | orderBy:predicate:reverse | filter: search")
                    %td
                      {{$index + 1}}
                    %td
                      %span
                        {{food.name}}
                    %td
                      %span
                        {{food.price}}
                    %td.centered
                      %a.btn.btn-warning(href='' ng-click="edit(food)")
                        %span
                          %i.glyphicon.glyphicon-pencil
                          Редагувати
                      %a.btn.btn-danger(href='' ng-click="delete(food)")
                        %span
                          %i.glyphicon.glyphicon-trash
                          Видалити